ipeline {
    environment {
        registry = "fredysa/sample"
        registryCredential = '42651425'
        dockerImage = ''
        path = "/home/"
    }
    agent {
        docker {
            image 'fredysa/sample'
            args '-p 3000:3000'
            args '-w /app'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage("Build"){
            steps {
                sh 'docker version'
                sh 'ls /home/'
                sh 'npm install'
            }
        }
        stage("Test"){
            steps {
                sh 'npm test'
            }
        }
        stage("Build & Push Docker image") {
            steps {
                sh 'docker image build -t fredysa/sampl:1.5 /home'

            }
        }

    }
}
