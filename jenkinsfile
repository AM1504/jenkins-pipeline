pipeline {
    environment {
        registry = "fredysa/sample"
        registryCredential = '42651425'
        dockerImage = ''
       
    }
    
    agent {
        docker {
            image 'fredysa/sample:1.5'
            args '-p 3000:3000'
            args '-w /app'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    options {
        skipStagesAfterUnstable()
    }

    stages {
        stage("Build"){
            steps {
                sh 'ls /home/jenkins-pipeline/'
                sh 'npm install'
                
            }
        }
        stage("Test"){
            steps {
                sh 'npm test'
            }
        }
        stage('Building our image') {
            steps{
                script {
                    dockerImage = docker.build registry + ":1.6"
                }
             }
        }

        stage("Build & Push Docker image") {
            steps {
                sh 'docker image build -t fredysa/sample:2.0 .'
                sh 'docker login -u fredysa -p $DOCKER_PWD'
                sh 'docker image push $registry:$BUILD_NUMBER'
                sh "docker image rm $registry:$BUILD_NUMBER"
               
            }
        }

        stage('Deploy and smoke test') {
           steps{
                sh './jenkins/scripts/deploy.sh'
            }
        }

        stage('Cleanup') {
            steps{
            sh './jenkins/scripts/cleanup.sh'
            }
        }
        
    }
}