pipeline {
    agent {
        docker {
            image 'node:6-alpine' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm install' 
            }
        }
    }

    stage('Test') {
            steps {
                echo 'Testing'
                
            }
    }
        
    stage('Deploy to Staging') {
            steps {
                echo 'Deploying to Staging'
            }
    }
        
    stage('Deploy to Production') {
            steps {
                echo 'Deploying to Production'
            }
    }

}