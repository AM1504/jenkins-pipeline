pipeline {
    agent {
        docker {
            image 'node:6-alpine' 
            args '-p 3000:3000' 
            args '-w /app'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm install' 
            }
        }
        stage('Test') { 
            steps {
                sh 'npm test'
                sh 'docker version'
            }
        }
        stage("Build & Push Docker image") {
            steps {
                sh 'docker --help'

            }
        }

        stage('Deploy and smoke test') {
            steps{
                 sh './home/scripts/deploy.sh'
                }
        }

        stage('Cleanup') {
            steps{
                sh './home/scripts/cleanup.sh'
                 }
        }

    }
}