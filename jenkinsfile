pipeline {
    environment {
        registry = "fredysa/sample"
        registryCredential = '42651425'
        dockerImage = ''
        path = "/home/"
       
    }
    
    agent {
        any {
            image 'fredysa/sample:1.5'
            args '-p 3000:3000'
            args '-w /app'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    options {
        skipStagesAfterUnstable()
    }


    stages {

        stage("Build"){
            steps {
                sh 'docker version'
                sh 'ls /home/'
                sh 'npm install'
            }
        }
        stage("Test"){
            steps {
                sh 'npm test'
            }
        }
        stage('Building our image') {
            steps{
                script {
                    echo "Path = ${env.path}"
                    echo "Registry = ${env.registry}"
                    sh 'docker --help'
                    sh 'docker image build -t fredysa/sampl:1.5 /home'

                }
             }
        }


        stage('Deploy and smoke test') {
           steps{
                sh './jenkins/scripts/deploy.sh'
            }
        }

        stage('Cleanup') {
            steps{
            sh './jenkins/scripts/cleanup.sh'
            }
        }
        
    }
}